@page "/settings"
@using GitlabPipelineGenerator.Web.Models
@inject IJSRuntime JSRuntime

<PageTitle>Settings</PageTitle>

<h2>Connection Settings</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>GitLab Instances</h4>
                <button class="btn btn-sm btn-success" @onclick="AddNewInstance">+ Add Instance</button>
            </div>
            <div class="card-body">
                @if (gitlabSettings.Instances.Any())
                {
                    @foreach (var instance in gitlabSettings.Instances)
                    {
                        <div class="border p-3 mb-3 @(instance.Id == gitlabSettings.DefaultInstanceId ? "border-primary" : "")">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6>@instance.Name @(instance.Id == gitlabSettings.DefaultInstanceId ? "(Default)" : "")</h6>
                                <div>
                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => EditInstance(instance.Id)">Edit</button>
                                    @if (instance.Id != gitlabSettings.DefaultInstanceId)
                                    {
                                        <button class="btn btn-sm btn-outline-success me-1" @onclick="() => SetDefaultInstance(instance.Id)">Set Default</button>
                                    }
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteInstance(instance.Id)">Delete</button>
                                </div>
                            </div>
                            <small class="text-muted">@instance.ServerUrl</small>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No GitLab instances configured.</p>
                }
                
                @if (showInstanceForm)
                {
                    <div class="border p-3 bg-light">
                        <h6>@(editingInstanceId == null ? "Add New Instance" : "Edit Instance")</h6>
                        <EditForm Model="currentInstance" OnValidSubmit="SaveInstance">
                            <div class="form-group mb-3">
                                <label>Instance Name:</label>
                                <InputText class="form-control" @bind-Value="currentInstance.Name" placeholder="e.g., Company GitLab" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Server URL:</label>
                                <InputText class="form-control" @bind-Value="currentInstance.ServerUrl" placeholder="https://gitlab.com" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Personal Access Token:</label>
                                <InputText type="password" class="form-control" @bind-Value="currentInstance.Token" />
                                <small class="form-text text-muted">Token with 'read_api' and 'read_repository' scopes</small>
                            </div>
                            <div class="form-group mb-3">
                                <label>Default Group ID:</label>
                                <InputText class="form-control" @bind-Value="currentInstance.DefaultGroupId" placeholder="e.g., 12345" />
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary me-2">@(editingInstanceId == null ? "Add" : "Update")</button>
                                <button type="button" class="btn btn-secondary" @onclick="CancelInstanceForm">Cancel</button>
                            </div>
                        </EditForm>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h4>GOCD Connection</h4>
            </div>
            <div class="card-body">
                <EditForm Model="gocdSettings" OnValidSubmit="SaveGOCDSettings">
                    <div class="form-group mb-3">
                        <label for="gocdUrl">GOCD Server URL:</label>
                        <InputText id="gocdUrl" class="form-control" @bind-Value="gocdSettings.ServerUrl" placeholder="https://your-gocd-server.com" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="authMethod">Authentication Method:</label>
                        <InputSelect id="authMethod" class="form-control" @bind-Value="gocdSettings.AuthMethod">
                            <option value="token">Bearer Token</option>
                            <option value="basic">Username/Password</option>
                        </InputSelect>
                    </div>
                    @if (gocdSettings.AuthMethod == "token")
                    {
                        <div class="form-group mb-3">
                            <label for="gocdToken">Bearer Token:</label>
                            <InputText id="gocdToken" type="password" class="form-control" @bind-Value="gocdSettings.BearerToken" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group mb-3">
                            <label for="gocdUsername">Username:</label>
                            <InputText id="gocdUsername" class="form-control" @bind-Value="gocdSettings.Username" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="gocdPassword">Password:</label>
                            <InputText id="gocdPassword" type="password" class="form-control" @bind-Value="gocdSettings.Password" />
                        </div>
                    }
                    <button type="submit" class="btn btn-primary">Save GOCD Settings</button>
                </EditForm>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h4>Octopus Deploy Connection</h4>
            </div>
            <div class="card-body">
                <EditForm Model="octopusSettings" OnValidSubmit="SaveOctopusSettings">
                    <div class="form-group mb-3">
                        <label for="octopusUrl">Octopus Server URL:</label>
                        <InputText id="octopusUrl" class="form-control" @bind-Value="octopusSettings.ServerUrl" placeholder="https://your-octopus-server.com" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="octopusApiKey">API Key:</label>
                        <InputText id="octopusApiKey" type="password" class="form-control" @bind-Value="octopusSettings.ApiKey" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save Octopus Settings</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success mt-3">@successMessage</div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mt-3">@errorMessage</div>
}

@code {
    private GitLabSettingsModel gitlabSettings = new();
    private GOCDConnectionModel gocdSettings = new();
    private OctopusConnectionModel octopusSettings = new();
    private GitLabInstanceModel currentInstance = new();
    private bool showInstanceForm = false;
    private string? editingInstanceId = null;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        try
        {
            var gitlabJson = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "gitlab-instances");
            if (!string.IsNullOrEmpty(gitlabJson))
            {
                gitlabSettings = System.Text.Json.JsonSerializer.Deserialize<GitLabSettingsModel>(gitlabJson) ?? new();
            }
            else
            {
                // Migrate from old single instance format
                var oldJson = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "gitlab-settings");
                if (!string.IsNullOrEmpty(oldJson))
                {
                    var oldSettings = System.Text.Json.JsonSerializer.Deserialize<GitLabConnectionModel>(oldJson);
                    if (oldSettings != null && !string.IsNullOrEmpty(oldSettings.Token))
                    {
                        var instance = new GitLabInstanceModel
                        {
                            Id = Guid.NewGuid().ToString(),
                            Name = "Default GitLab",
                            ServerUrl = oldSettings.ServerUrl,
                            Token = oldSettings.Token,
                            DefaultGroupId = oldSettings.DefaultGroupId
                        };
                        gitlabSettings.Instances.Add(instance);
                        gitlabSettings.DefaultInstanceId = instance.Id;
                        await SaveGitLabSettings();
                    }
                }
            }

            var gocdJson = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "gocd-settings");
            if (!string.IsNullOrEmpty(gocdJson))
            {
                gocdSettings = System.Text.Json.JsonSerializer.Deserialize<GOCDConnectionModel>(gocdJson) ?? new();
            }
            
            var octopusJson = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "octopus-settings");
            if (!string.IsNullOrEmpty(octopusJson))
            {
                octopusSettings = System.Text.Json.JsonSerializer.Deserialize<OctopusConnectionModel>(octopusJson) ?? new();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading settings: {ex.Message}";
        }
    }

    private async Task SaveGitLabSettings()
    {
        try
        {
            var json = System.Text.Json.JsonSerializer.Serialize(gitlabSettings);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "gitlab-instances", json);
            successMessage = "GitLab settings saved successfully!";
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving GitLab settings: {ex.Message}";
            successMessage = null;
        }
    }
    
    private void AddNewInstance()
    {
        currentInstance = new GitLabInstanceModel();
        editingInstanceId = null;
        showInstanceForm = true;
    }
    
    private void EditInstance(string instanceId)
    {
        var instance = gitlabSettings.Instances.FirstOrDefault(i => i.Id == instanceId);
        if (instance != null)
        {
            currentInstance = new GitLabInstanceModel
            {
                Id = instance.Id,
                Name = instance.Name,
                ServerUrl = instance.ServerUrl,
                Token = instance.Token,
                DefaultGroupId = instance.DefaultGroupId
            };
            editingInstanceId = instanceId;
            showInstanceForm = true;
        }
    }
    
    private async Task SaveInstance()
    {
        if (editingInstanceId == null)
        {
            currentInstance.Id = Guid.NewGuid().ToString();
            gitlabSettings.Instances.Add(currentInstance);
            if (gitlabSettings.DefaultInstanceId == null)
            {
                gitlabSettings.DefaultInstanceId = currentInstance.Id;
            }
        }
        else
        {
            var index = gitlabSettings.Instances.FindIndex(i => i.Id == editingInstanceId);
            if (index >= 0)
            {
                gitlabSettings.Instances[index] = currentInstance;
            }
        }
        
        await SaveGitLabSettings();
        CancelInstanceForm();
    }
    
    private void CancelInstanceForm()
    {
        showInstanceForm = false;
        editingInstanceId = null;
        currentInstance = new GitLabInstanceModel();
    }
    
    private async Task DeleteInstance(string instanceId)
    {
        gitlabSettings.Instances.RemoveAll(i => i.Id == instanceId);
        if (gitlabSettings.DefaultInstanceId == instanceId)
        {
            gitlabSettings.DefaultInstanceId = gitlabSettings.Instances.FirstOrDefault()?.Id;
        }
        await SaveGitLabSettings();
    }
    
    private async Task SetDefaultInstance(string instanceId)
    {
        gitlabSettings.DefaultInstanceId = instanceId;
        await SaveGitLabSettings();
    }

    private async Task SaveGOCDSettings()
    {
        try
        {
            var json = System.Text.Json.JsonSerializer.Serialize(gocdSettings);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "gocd-settings", json);
            successMessage = "GOCD settings saved successfully!";
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving GOCD settings: {ex.Message}";
            successMessage = null;
        }
    }
    
    private async Task SaveOctopusSettings()
    {
        try
        {
            var json = System.Text.Json.JsonSerializer.Serialize(octopusSettings);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "octopus-settings", json);
            successMessage = "Octopus settings saved successfully!";
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving Octopus settings: {ex.Message}";
            successMessage = null;
        }
    }
}