@model GitlabPipelineGenerator.Web.Models.GitLabConnectionModel
@{
    Layout = "_Layout";
}

<h1>GitLab Pipeline Generator</h1>

<form method="post" action="/Home/Connect">
    <div class="form-group">
        <label for="Token">GitLab Personal Access Token:</label>
        <input type="password" id="Token" name="Token" value="@Model.Token" required />
        <small>Create a token at GitLab → User Settings → Access Tokens with 'read_api' and 'read_repository' scopes</small>
    </div>
    
    <div class="form-group">
        <label for="GroupId">Group ID:</label>
        <input type="text" id="GroupId" name="GroupId" value="@Model.GroupId" placeholder="e.g., 12345" required />
        <small>Enter the GitLab group ID (numeric) to list projects from</small>
    </div>
    
    <button type="submit">Connect to GitLab</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="error">@ViewBag.Error</div>
}