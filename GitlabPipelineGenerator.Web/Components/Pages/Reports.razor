@page "/reports"

<PageTitle>Reports</PageTitle>

<h1>Reports</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>CI/CD Variables by Group/Project</h4>
            </div>
            <div class="card-body">
                <p>Generate a report showing CI/CD variable counts for all subgroups and projects.</p>
                <a href="/reports/variables" class="btn btn-primary">View Report</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Pipeline runs by date range</h4>
            </div>
            <div class="card-body">
                <p>Generate a report showing pipeline run counts by project within a date range.</p>
                <a href="/reports/pipeline-runs" class="btn btn-primary">View Report</a>
            </div>
        </div>
    </div>
</div>

