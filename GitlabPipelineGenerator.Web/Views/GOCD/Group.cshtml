@model GitlabPipelineGenerator.GOCDApiClient.Models.PipelineGroup

@{
    ViewData["Title"] = $"Group: {Model.Name}";
}

<h2>Pipeline Group: @Model.Name</h2>

@if (Model.Pipelines.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pipeline Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pipeline in Model.Pipelines)
                {
                    <tr>
                        <td>@pipeline.Name</td>
                        <td>
                            @if (pipeline.Locked)
                            {
                                <span class="badge badge-warning">Locked</span>
                            }
                            @if (pipeline.PauseInfo?.Paused == true)
                            {
                                <span class="badge badge-secondary">Paused</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Pipeline" asp-route-pipelineName="@pipeline.Name" class="btn btn-sm btn-primary">View Config</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No pipelines found in this group.</p>
}

<a asp-action="Connect" class="btn btn-secondary">Back to Groups</a>